    <%= f.label :Apellido_Paterno %><br/>
    <%= f.text_field :apellidoPaterno%>
  </div>

  <div class="field">
    <%= f.label :Apellido_Materno %><br/>
    <%= f.text_field :apellidoMaterno%>
  </div>

  <div class="field">
    <%= f.label :Fecha_de_Nacimiento %><br/>
    <%= f.text_field :fechaNacimiento %>
  </div>

  <div class="field">
    <%= f.label :Correo_Electronico %><br/>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :ContraseÃ±a %>
