<%= link_to "Nuevo", new_admin_post_path %>

<% if @posts.blank? %>
 <strong>Información!</strong> Aun no hay elementos en la base de datos.

<% else %>

<table>
  <thead>
    <tr>
      <th>Titulo </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |item| %>
      <tr>
        <td><%= item.titulo    %>
        <td><%= item.veces_leida  %>
        <td><%= link_to "[ Mostar ]", admin_post_path(item) %></td>
        <td><%= link_to "[ Editar ]", edit_admin_post_path(item) %></td>
        <td><%= link_to "[ Eliminar ]", admin_post_path(item), method: :delete, data: { confirm: '¿Seguro de eliminar post?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
